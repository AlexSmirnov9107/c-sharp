<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:gif="http://wpfanimatedgif.codeplex.com" 
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="360" WindowStartupLocation="CenterScreen" >

    <ScrollViewer HorizontalAlignment="Left" Height="330" Width="360" VerticalAlignment="Top" Margin="0,0,0,0" ScrollChanged="ScrollViewer_ScrollChanged">
        <Grid x:Name="grid" ShowGridLines="True" ScrollViewer.VerticalScrollBarVisibility="Hidden" VerticalAlignment="Center" Height="720">

            <Image x:Name="imageTemplate" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" ScrollViewer.CanContentScroll="True"  gif:ImageBehavior.AnimatedSource="loader.gif" Grid.RowSpan="2" Visibility="Hidden"/>

        </Grid>
    </ScrollViewer>
</Window>
