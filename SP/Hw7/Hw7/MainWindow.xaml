<Window x:Class="Hw7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hw7"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Старт" HorizontalAlignment="Left" Margin="21,18,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Стоп" HorizontalAlignment="Left" Margin="115,18,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Рубеж" HorizontalAlignment="Left" Margin="218,18,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
        <Label x:Name="time" Content="Label" HorizontalAlignment="Left" Margin="115,57,0,0" VerticalAlignment="Top" Width="75"/>
        <DataGrid x:Name="datagrid" HorizontalAlignment="Left" Height="185" Margin="66,99,0,0" VerticalAlignment="Top" Width="171" ItemsSource="{Binding results}" />

    </Grid>
</Window>
